<h1>記事</h1>
<h3>新規投稿</h3>
<%= form_for @banana do |f| %>

  <div class="title">
    <%= f.label :タイトル %>
    <%= f.text_field :body, :size => 140 %>
  </div>

  
  <div class="about">
    <%= f.label :記事本文 %>
    <%= f.text_field :about %>
  </div>

  <%= f.submit "投稿する" %>

<% end %>
